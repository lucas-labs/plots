{
    "files.exclude": {
        // 📙 sub-libs
        "packages/assets": true,
        "logo.ai": true,

        // ⚙️ config
        "**/**/tsconfig*": true,
        ".npmrc": true,
        "webpack.config.js": true,
        "**/**/*code-workspace": true,
        "vercel.json": true,
        ".nvmrc": true,
        "**/**/.babelrc.json": true,
        "coco.yml": true,

        // 🏷️ definitions & others
        "**/**/*.d.ts": true,
        "packages/plots/*.js": true,

        // 📚 storybook
        "**/**/.storybook": true,
